---
import { type CollectionEntry, getCollection } from 'astro:content';
import ProductPost from '../../layouts/ProductPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('products');
	return posts
		.filter((post) => !post.data.url)
		.map((post) => ({
			params: { slug: post.slug },
			props: post,
		}));
}
type Props = CollectionEntry<'products'>;

const post = Astro.props;
console.log('post.rawBody:', post.rawBody); // Keep for debugging if needed, but it's undefined
---

<ProductPost {...post.data} contentBody={post.body}>
</ProductPost>
